<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomsheet_mobileOtpVerify"
    android:orientation="vertical"
    tools:context=".User.bottomsheetMobileOtp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/bottom_sheet_top_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:gravity="fill_vertical"
            android:text="@string/otp_verification"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/exitbottomsheet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/todo"
                android:gravity="end"
                android:padding="7dp"
                android:src="@drawable/exit_icon"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:paddingBottom="30dp"
        android:background="@drawable/border_layout"
        android:orientation="vertical"
        android:paddingTop="20dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/we_have_sent_a_verification_code_to"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/user_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobile"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputotp1"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/otp_enter_background"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/inputotp2"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/otp_enter_background"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/inputotp3"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/otp_enter_background"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/inputotp4"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/otp_enter_background"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/inputotp5"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/otp_enter_background"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/inputotp6"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/otp_enter_background"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                tools:ignore="LabelFor,TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:importantForAutofill="no" />


        </LinearLayout>
        <TextView
            android:id="@+id/coundown_timer"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"/>
        <LinearLayout
            android:id="@+id/show_resend_otp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/didn_t_receive_the_code"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/resend_otp"
                android:textColor="#5000FF"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
                <ProgressBar
                    android:id="@+id/progessBar_resend_otp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
    <LinearLayout
        android:id="@+id/verify_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/otp_verify_button_background"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify"
            android:textColor="@color/white"/>
    </LinearLayout>
        <ProgressBar
            android:id="@+id/progessBar_verify_otp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone"/>


    </FrameLayout>


</LinearLayout>