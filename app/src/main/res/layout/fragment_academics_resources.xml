<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentAcademicsResources">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        tools:ignore="UselessParent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/academics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/acamedics_resources"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/academics_syllabus_show"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/syllabusbackground"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/homesyllabuslogo"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/homesyllabus"
                    tools:ignore="TooDeepLayout,ImageContrastCheck" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/couse_syllabus"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/academics_quePaper_show"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/qpaperbackground"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_margin="8dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/homequestion"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/question_papers"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/academics_notes_show"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/notesbakground"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:id="@+id/homenoteslogo"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/homenotes"
                    tools:ignore="TooDeepLayout" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/notes_materials"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/academics_result_show"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/resultbackground"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/homeresult"
                    tools:ignore="TooDeepLayout" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/university_result"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/academics_timetable_show"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/syllabusbackground"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_margin="3dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/homesyllabus"
                    tools:ignore="TooDeepLayout,ImageContrastCheck" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/rtmnu_exam_time_table"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>